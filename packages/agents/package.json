{
  "name": "@llm-dev-ops/connector-hub-agents",
  "version": "0.1.0",
  "description": "Agent infrastructure for LLM Connector Hub - external interface adapters, ingestion, and normalization agents. Deployable as Google Cloud Edge Functions.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/globalbusinessadvisors/llm-connector-hub",
    "directory": "packages/agents"
  },
  "bin": {
    "connector-hub-agent": "./dist/cli/index.js",
    "erp-surface": "./dist/agents/erp-surface/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "start": "node dist/server/index.js",
    "start:dev": "node --watch dist/server/index.js",
    "deploy": "./deploy/deploy.sh",
    "deploy:dev": "./deploy/deploy.sh dev",
    "deploy:staging": "./deploy/deploy.sh staging",
    "deploy:prod": "./deploy/deploy.sh prod"
  },
  "keywords": [
    "agentics",
    "agents",
    "webhook",
    "connector",
    "ingestion",
    "edge-functions",
    "google-cloud",
    "stateless"
  ],
  "license": "MIT OR Apache-2.0",
  "dependencies": {
    "@llm-dev-ops/connector-hub-core": "^0.1.0",
    "commander": "^12.0.0",
    "jose": "5.10.0",
    "pino": "^8.16.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./erp-surface": {
      "types": "./dist/agents/erp-surface/index.d.ts",
      "import": "./dist/agents/erp-surface/index.js"
    },
    "./erp-surface/handler": {
      "types": "./dist/agents/erp-surface/handler.d.ts",
      "import": "./dist/agents/erp-surface/handler.js"
    },
    "./webhook": {
      "types": "./dist/webhook/index.d.ts",
      "import": "./dist/webhook/index.js"
    },
    "./contracts": {
      "types": "./dist/contracts/index.d.ts",
      "import": "./dist/contracts/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
