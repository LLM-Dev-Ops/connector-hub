# LLM-Connector-Hub Environment Configuration
#
# Copy this file to .env and fill in values for local development
# For production, use Google Secret Manager

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================

# Service identity
SERVICE_NAME=llm-connector-hub
SERVICE_VERSION=1.0.0
PLATFORM_ENV=dev  # dev | staging | prod

# Server configuration
PORT=8080
DEBUG=false
AGENT_TIMEOUT_MS=30000
MAX_PAYLOAD_BYTES=10485760

# ============================================================================
# RUVECTOR-SERVICE CONFIGURATION (REQUIRED)
# ============================================================================

# RuVector service endpoint (Google SQL via ruvector-service)
# NO DIRECT SQL ACCESS - All persistence via ruvector-service only
RUVECTOR_SERVICE_URL=https://ruvector-service-xxx.run.app

# Authentication (use Secret Manager in production)
RUVECTOR_API_KEY=your-api-key-here

# ============================================================================
# TELEMETRY CONFIGURATION
# ============================================================================

# LLM-Observatory endpoint for telemetry
TELEMETRY_ENDPOINT=https://llm-observatory-xxx.run.app
TELEMETRY_ENABLED=true
TELEMETRY_SAMPLE_RATE=1.0

# ============================================================================
# AGENT-SPECIFIC CONFIGURATION
# ============================================================================

# ERP Surface Agent
ERP_CONNECTOR_SCOPE=erp-connector
ERP_ALLOWED_SYSTEMS=sap,oracle_ebs,netsuite,microsoft_dynamics

# Database Query Agent
DB_CONNECTOR_SCOPE=database-connector
DB_MAX_ROWS=1000
DB_QUERY_TIMEOUT_MS=10000

# Webhook Ingest Agent
WEBHOOK_CONNECTOR_SCOPE=webhook-connector
WEBHOOK_RATE_LIMIT_RPM=1000
WEBHOOK_REPLAY_PROTECTION=true

# Auth Identity Agent
AUTH_CONNECTOR_SCOPE=auth-connector
AUTH_JWT_ISSUER=https://auth.agentics.dev
AUTH_JWT_AUDIENCE=llm-connector-hub

# Event Normalization Agent
NORMALIZE_CONNECTOR_SCOPE=normalize-connector

# ============================================================================
# GOOGLE CLOUD CONFIGURATION
# ============================================================================

# Project and region
GOOGLE_CLOUD_PROJECT=agentics-dev
GOOGLE_CLOUD_REGION=us-central1
